<%= form_with model: @employee do |f| %>
  <% if @employee.errors.any? %>
    <div class="error-messages">
      <h3><%= @employee.errors.count %>件のエラーがあります</h3>
      <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :employee_number, "社員番号", class: "form-label" %>
    <%= f.text_field :employee_number, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "氏名", class: "form-label" %>
    <%= f.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :department_id, "部署", class: "form-label" %>
    <%= f.collection_select :department_id, current_company.departments, :id, :name, { include_blank: "選択してください" }, { class: "form-select" } %>
  </div>

  <div class="form-group">
    <%= f.label :status, "ステータス", class: "form-label" %>
    <%= f.select :status, Employee.statuses.keys.map { |s| [s == "active" ? "在籍" : "退職", s] }, {}, { class: "form-select" } %>
  </div>

  <div class="form-group">
    <%= f.label :retired_at, "退職日", class: "form-label" %>
    <%= f.date_field :retired_at, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.check_box :admin %>
    <%= f.label :admin, "管理者権限を付与" %>
  </div>

  <div class="form-actions">
    <%= f.submit "保存", class: "btn btn-primary" %>
    <%= link_to "キャンセル", employees_path, class: "btn" %>
  </div>
<% end %>
