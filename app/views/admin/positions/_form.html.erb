<%= form_with model: [:admin, @position] do |f| %>
  <% if @position.errors.any? %>
    <div class="error-messages">
      <h3><%= @position.errors.count %>件のエラーがあります</h3>
      <ul>
        <% @position.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "役職名", class: "form-label" %>
    <%= f.text_field :name, class: "form-input", placeholder: "例: 部長、課長、係長" %>
  </div>

  <div class="form-group">
    <%= f.label :hourly_rate, "時給（円）", class: "form-label" %>
    <%= f.number_field :hourly_rate, class: "form-input", min: 0, step: 100, placeholder: "例: 5000" %>
  </div>

  <div class="form-group">
    <%= f.label :rank, "表示順位", class: "form-label" %>
    <%= f.number_field :rank, class: "form-input", min: 1, placeholder: "小さい数字ほど上位（例: 1=最上位）" %>
    <p class="form-hint">小さい数字ほど上位に表示されます</p>
  </div>

  <div class="form-actions">
    <%= f.submit "保存", class: "btn btn-primary" %>
    <%= link_to "キャンセル", admin_positions_path, class: "btn" %>
  </div>
<% end %>
